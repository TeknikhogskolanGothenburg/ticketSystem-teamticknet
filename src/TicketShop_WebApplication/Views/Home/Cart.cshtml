@model ClassLibraryTicketShop.UserAndTicket

<thead>

	<tr>
		<th>
			<h6>Event</h6>
		</th>
		<th>
			<h6>Description</h6>
		</th>
		<th>
			<h1>Events in your shopping cart: </h1>
		</th>

		<th></th>
	</tr>

</thead>

@foreach (var item in @Model.events)
{

	<form action="~/Home/Delete" method="delete">

		<lu>
			<input type="hidden" name="EventId" value="@item.TicketEventDateID" />
			
			<h5>@item.EventName</h5>
			 <h5>@item.EventHtmlDescription</h5>
			<h5>@item.EventStartDateTime</h5>


			<input type="submit" value="Delete" />


		</lu>
	</form>
}










