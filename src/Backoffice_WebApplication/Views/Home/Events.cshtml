@{
	ViewData["Title"] = "Add your event below...";
}

<div class="center">
    <h2>@ViewData["Title"]</h2>
</div>
<br>
<form action="Events" method="post">
    <div class="center">
        <label for="name">Event Name</label>
        <input type="text" id="name" name="name" placeholder="Event Name..">

        <label for="description">Event Description</label>
        <input type="text" id="description" name="description" placeholder="Description..">

        <label for="eventStart">Event Start</label>
        <input type="text" id="eventStart" name="eventStart" placeholder="Event starting..">
        <br>
        <br>
        <label for="Vname">Venue</label>
        <input type="text" id="Vname" name="Vname" placeholder="Venue name..">

        <label for="Address">Address</label>
        <input type="text" id="Address" name="Address" placeholder="Address..">

        <label for="City">City</label>
        <input type="text" id="City" name="City" placeholder="City..">

        <label for="country">Country</label>
        <select id="Country" name="Country">
            <option value="United Kingdom">United Kingdom</option>
            <option value="Sweden">Sweden</option>
            <option value="Norway">Norway</option>
        </select>
        <input type="submit" />
    </div>
</form>
